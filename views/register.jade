extends layout

block content
  div.container
    form.form-signin(method='post', action='/register')
        img.mb-4(src='https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg', alt='', width='72', height='72')
        h1.h3.mb-3.font-weight-normal Please Register
        label.sr-only(for='username') UserName
        input#username.form-control(type='text', name='username', placeholder='Username', required='', autofocus='')
        label.sr-only(for='password') Password
        input#password.form-control(type='password', name='password', placeholder='Password', required='')
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Register

